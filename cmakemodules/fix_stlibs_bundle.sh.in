#/bin/bash

BIN_DIR="${CMAKE_PROJECT_NAME}.app/Contents/MacOS"

ABS_BIN_DIR="`pwd`/$BIN_DIR"
LOCAL_LIB_DIR="/opt/local/lib"
BASE_DIR="`pwd`"
DEP_LIB_DIR="${CMAKE_CURRENT_SOURCE_DIR}/../installer/macosx/bundlelibs"
TOMDIR="`pwd`/tombin.app/Contents/MacOS"

echo "--- Copying libs to build dir from:  $DEP_LIB_DIR"
cp -r $DEP_LIB_DIR/Frameworks ./$BIN_DIR/..
cp -r $DEP_LIB_DIR/locallibs/* ./$BIN_DIR

echo "--- Copying TOM from: $TOMDIR"
cp $TOMDIR/tombin $ABS_BIN_DIR


STLIBS_AND_TOM=`ls ./$BIN_DIR/libst*.?.?.?.dylib`
STLIBS_AND_TOM="$STLIBS_AND_TOM ./$BIN_DIR/tombin"
QTLIB_DIR=${QT_QTCORE_INCLUDE_DIR}/../../
for i in $STLIBS_AND_TOM
do
	echo Fixing $i ... 
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtXml.framework/Versions/4/QtXml @executable_path/../Frameworks/QtXml.framework/Versions/4/QtXml $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtCore.framework/Versions/4/QtCore @executable_path/../Frameworks/QtCore.framework/Versions/4/QtCore $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtGui.framework/Versions/4/QtGui @executable_path/../Frameworks/QtGui.framework/Versions/4/QtGui $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtSql.framework/Versions/4/QtSql @executable_path/../Frameworks/QtSql.framework/Versions/4/QtSql $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtSvg.framework/Versions/4/QtSvg @executable_path/../Frameworks/QtSvg.framework/Versions/4/QtSvg $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtNetwork.framework/Versions/4/QtNetwork @executable_path/../Frameworks/QtNetwork.framework/Versions/4/QtNetwork $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtWebKit.framework/Versions/4/QtWebKit @executable_path/../Frameworks/QtWebKit.framework/Versions/4/QtWebKit $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/Qt3Support.framework/Versions/4/Qt3Support @executable_path/../Frameworks/Qt3Support.framework/Versions/4/Qt3Support $i
        install_name_tool -change /Users/jfernandez/QtSDK/Desktop/Qt/4.8.1/gcc/lib/QtXmlPatterns.framework/Versions/4/QtXmlPatterns @executable_path/../Frameworks/QtXmlPatterns.framework/Versions/4/QtXmlPatterns $i

done 

echo "Making paths relative..."
pushd .
cd $ABS_BIN_DIR
for j in `ls libst*.*.dylib`
do
	for i in `ls libst*.*.dylib`
	do
		install_name_tool -change $ABS_BIN_DIR/$j @executable_path/./$j $i
	done
	install_name_tool -change $ABS_BIN_DIR/$j @executable_path/./$j tombin

done


for j in `ls -1 /opt/local/lib | grep dylib`
do
	for i in `ls libst*.*.dylib`
	do
#		echo "Changing $LOCAL_LIB_DIR/$j for  @executable_path/./$j in  $i"
		install_name_tool -change $LOCAL_LIB_DIR/$j @executable_path/./$j $i
	done
	install_name_tool -change $LOCAL_LIB_DIR/$j @executable_path/./$j tombin
done

popd

